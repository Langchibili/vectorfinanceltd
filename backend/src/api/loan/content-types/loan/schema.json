{
  "kind": "collectionType",
  "collectionName": "loans",
  "info": {
    "singularName": "loan",
    "pluralName": "loans",
    "displayName": "Loan",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "loanAmount": {
      "type": "decimal"
    },
    "interestRate": {
      "type": "decimal"
    },
    "loanStatus": {
      "type": "enumeration",
      "enum": [
        "pending ",
        "approved",
        "rejected",
        "disbursed",
        "completed",
        "defaulted"
      ],
      "default": "pending "
    },
    "repaymentSchedule": {
      "type": "json"
    },
    "loanTerm": {
      "type": "integer"
    },
    "loanType": {
      "type": "enumeration",
      "enum": [
        "personal Loan",
        "business Loan",
        "auto loan"
      ]
    },
    "loanCategory": {
      "type": "enumeration",
      "enum": [
        "collateral-based",
        "salary-based"
      ]
    },
    "loanPurpose": {
      "type": "blocks"
    },
    "applicationDate": {
      "type": "datetime"
    },
    "approvalDate": {
      "type": "datetime"
    },
    "disbursementDate": {
      "type": "datetime"
    },
    "dueDate": {
      "type": "datetime"
    },
    "outstandingAmount": {
      "type": "decimal"
    },
    "Collateral": {
      "displayName": "Collateral",
      "type": "component",
      "repeatable": false,
      "component": "media-and-documents.collateral"
    },
    "latePaymentPenalty": {
      "type": "decimal"
    },
    "loanAgreementDocuments": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "client": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "loans"
    },
    "repayments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::repayment.repayment",
      "mappedBy": "loan"
    },
    "approval": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::approval.approval",
      "inversedBy": "loan"
    },
    "type": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::type.type",
      "inversedBy": "loans"
    },
    "transactionHstories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::transaction-history.transaction-history",
      "mappedBy": "loan"
    },
    "loan_categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::loan-category.loan-category",
      "mappedBy": "loans"
    }
  }
}
