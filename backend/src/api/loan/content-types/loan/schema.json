{
  "kind": "collectionType",
  "collectionName": "loans",
  "info": {
    "singularName": "loan",
    "pluralName": "loans",
    "displayName": "Loan",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "loanAmount": {
      "type": "decimal"
    },
    "interestRate": {
      "type": "decimal"
    },
    "loanStatus": {
      "type": "enumeration",
      "enum": [
        "initiated",
        "pending-approval",
        "accepted",
        "approved",
        "rejected",
        "disbursed",
        "completed",
        "defaulted"
      ],
      "default": "initiated"
    },
    "repaymentSchedule": {
      "type": "json"
    },
    "loanTerm": {
      "type": "integer"
    },
    "applicationDate": {
      "type": "datetime"
    },
    "approvalDate": {
      "type": "datetime"
    },
    "disbursementDate": {
      "type": "datetime"
    },
    "dueDate": {
      "type": "datetime"
    },
    "outstandingAmount": {
      "type": "decimal"
    },
    "Collateral": {
      "displayName": "Collateral",
      "type": "component",
      "repeatable": false,
      "component": "media-and-documents.collateral"
    },
    "latePaymentPenalty": {
      "type": "decimal"
    },
    "loanAgreementDocuments": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "client": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "loans"
    },
    "repayments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::repayment.repayment",
      "mappedBy": "loan"
    },
    "approval": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::approval.approval",
      "inversedBy": "loan"
    },
    "loanType": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::type.type",
      "inversedBy": "loans"
    },
    "transactionHstories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::transaction-history.transaction-history",
      "mappedBy": "loan"
    },
    "loanCategory": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::loan-category.loan-category",
      "inversedBy": "loans"
    },
    "salary": {
      "displayName": "salary",
      "type": "component",
      "repeatable": false,
      "component": "client-details.salary"
    },
    "clientAskingAmount": {
      "type": "decimal"
    },
    "loanPurpose": {
      "type": "enumeration",
      "enum": [
        "Business Expansion",
        "Home Renovation",
        "Education",
        "Medical Expenses",
        "Debt Consolidation",
        "Vehicle Purchase",
        "Equipment Purchase,",
        "Inventory Purchase,",
        "Working Capital,",
        "Marketing and Advertising,",
        "Product Development,",
        "Debt Refinancing,",
        "Hiring and Training,",
        "Property Acquisition or Lease,",
        "Emergency Funds,",
        "Technology Upgrades,",
        "Project Funding,",
        "Seasonal Demand Preparation,",
        "Legal and Regulatory Compliance,",
        "Research and Development",
        "Others"
      ]
    },
    "loanPurposeDetails": {
      "type": "text"
    },
    "salaryPercentage": {
      "type": "decimal"
    }
  }
}
